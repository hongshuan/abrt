{
    "name": "Auto Book Road Test",
    "description": "Auto Book A Road Test",
    "manifest_version": 2,
    "version": "1.0",

    "applications": {
        "gecko": {
            "strict_min_version": "57.0a1",
            "id": "abrt.lihsca@gmail.com"
        }
    },

    "browser_action": {
        "default_title": "ABRT",
        "default_icon": "webres/icon-48.png"
    },

    "background": {
        "scripts": ["background/background.js"]
    },

    "content_scripts": [{
        "matches": [
            "*://drivetest.ca/book-a-road-test/booking.html"
        ],
        "js": [
            "content/script.js"
        ]
    }],

    "icons": {
        "48": "webres/icon-48.png",
        "96": "webres/icon-96.png"
    },

    "permissions": [
        "tabs"
    ]
}
