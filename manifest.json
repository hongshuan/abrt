{
    "name": "ABRT",
    "description": "Auto Book Road Test",
    "manifest_version": 2,
    "version": "1.0",

    "applications": {
        "gecko": {
            "strict_min_version": "57.0a1",
            "id": "{88a07d5f-ee3c-45e0-a8a9-7bb62f7de8b2}"
        }
    },

    "browser_action": {
        "default_title": "ABRT",
        "default_icon": "assets/icon-48.png"
    },

    "background": {
        "scripts": [
            "background/background.js",
            "background/calendar.js"
        ]
    },

    "content_scripts": [{
        "matches": [
            "*://drivetest.ca/book-a-road-test/booking.html"
        ],
        "js": [
            "content/script.js"
        ],
        "run_at": "document_end"
    }],

    "icons": {
        "48": "assets/icon-48.png",
        "96": "assets/icon-96.png"
    },

    "permissions": [
        "tabs",
        "storage",
        "webRequest",
        "<all_urls>"
    ]
}
